{
  "name": "shorts",
  "version": "1.4.0",
  "description": "Scalable URL Shortener",
  "main": "bin/www",
  "scripts": {
    "prepare": "cp resource/config/enviroment-sample.json resource/config/enviroment.json",
    "start": "nodemon --exec babel-node bin/www",
    "lint": "xo --esnext src/**/*.js",
    "test": "nyc mocha ./test/**/*.spec.js --compilers js:babel-core/register",
    "cover": "npm test && nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "url": "git@github.com:matheuslc/shorts.git",
    "type": "git"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ]
  },
  "xo": {
    "esnext": true,
    "space": 2,
    "rules": {
      "unicorn/filename-case": [
        "error",
        "camelCase"
      ],
      "new-cap": 0
    }
  },
  "author": "Matheus Carmo <mematheuslc@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "body-parser": "~1.15.1",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "express": "5.0.0-alpha.2",
    "global": "^4.3.1",
    "jade": "~1.11.0",
    "mongoose": "^5.7.5",
    "morgan": "~1.7.0",
    "pm2": "^2.0.18",
    "serve-favicon": "~2.3.0",
    "sinon-chai": "^2.8.0",
    "valid-url": "^1.0.9"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.21.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-0": "^6.5.0",
    "chai": "^3.5.0",
    "coveralls": "^2.11.15",
    "eslint-config-airbnb-base": "^11.0.0",
    "eslint-plugin-import": "^2.2.0",
    "mocha": "^3.2.0",
    "nock": "^9.0.2",
    "node-mocks-http": "^1.5.5",
    "nodemon": "^1.11.0",
    "nyc": "^10.0.0",
    "sinon": "^1.17.6",
    "sinon-as-promised": "^4.0.2",
    "sinon-mongoose": "^1.3.0",
    "xo": "^0.17.1"
  }
}
